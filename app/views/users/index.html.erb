<% content_for :title, "Users" %>

<div class="max-w-6xl mx-auto mt-10">
  <% if notice %>
    <p class="mb-4 text-green-600 font-medium"><%= notice %></p>
  <% end %>

  <h1 class="text-3xl font-bold text-gray-800 mb-6">Users</h1>

  <div id="users" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @users.each do |user| %>
      <div class="p-4 bg-white rounded-lg shadow-md border border-gray-200">
        <%= render user %>
        <div class="mt-4">
          <%= link_to "Show this user", user, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to "New user", new_user_path, class: "inline-block bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
  </div>
</div>