<div class="max-w-4xl mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
  <% if notice %>
    <p class="mb-4 text-green-600 font-medium"><%= notice %></p>
  <% end %>

  <%= render @user %>

  <div class="mt-6 flex justify-between items-center">
    <div>
      <%= link_to "Edit this user", edit_user_path(@user), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
      <span class="mx-2 text-gray-400">|</span>
      <%= link_to "Back to users", users_path, class: "text-gray-600 hover:text-gray-800 font-medium" %>
    </div>
    <%= button_to "Destroy this user", @user, method: :delete, class: "bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
  </div>
</div>
