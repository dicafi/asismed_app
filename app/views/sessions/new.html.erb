<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">Login</h1>

    <%= form_with url: login_path, method: :post, local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :username, 'Username or Email', class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :username, required: true, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, required: true, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.submit 'Login', class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <p class="mt-4 text-center text-sm text-red-600"><%= flash[:alert] %></p>
    <% end %>
  </div>
</div>